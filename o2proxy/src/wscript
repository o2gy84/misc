#!/usr/bin/env python
# encoding: utf-8

from waflib.Build import BuildContext


APPNAME = 'o2proxy'
VERSION = '0.1.0'

top = '.'
out = 'BUILD'

def options(ctx):
        ctx.load('compiler_cxx')

def configure(ctx):
    #print('â†’ configuring the project in ' + ctx.path.abspath())
    ctx.load('compiler_cxx')

def build(ctx):

    ctx.program(
            target       = APPNAME,
            use          = 'myshlib',
            source       = ['main.cpp', 'options.cpp', 'config.cpp', 'utils.cpp', 'server.cpp', 'engine.cpp',
                            'select.cpp', 'poll.cpp', 'poll_async.cpp', 'epoll.cpp',
                            'http.cpp', 'client.cpp', 'proxy_client.cpp', 'logger.cpp'
                            ],
            includes     = ['.'],
            defines     = ['DEBUG=1'],
            lib          = ['pthread'],
            #libpath      = ['/usr/lib'],
            #stlib        = ['dl'],
            #stlibpath    = ['/usr/local/lib'],
            linkflags    = ['-ggdb'],
            cxxflags     = ['-ggdb', '-std=c++11', '-Wall', '-Wpedantic', '-Werror'],
    )
